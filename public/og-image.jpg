<svg width="1200" height="630" viewBox="0 0 1200 630" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#0f0f23;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#1a1a2e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#16213e;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="primaryGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#6366f1;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#8b5cf6;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#a855f7;stop-opacity:1" />
    </linearGradient>
    <filter id="glow">
      <feGaussianBlur stdDeviation="4" result="coloredBlur"/>
      <feMerge> 
        <feMergeNode in="coloredBlur"/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="630" fill="url(#bgGradient)"/>
  
  <!-- Grid Pattern -->
  <pattern id="grid" width="50" height="50" patternUnits="userSpaceOnUse">
    <path d="M 50 0 L 0 0 0 50" fill="none" stroke="rgba(99, 102, 241, 0.1)" stroke-width="1"/>
  </pattern>
  <rect width="1200" height="630" fill="url(#grid)"/>
  
  <!-- Logo -->
  <circle cx="200" cy="315" r="80" fill="url(#primaryGradient)" filter="url(#glow)"/>
  <path d="M160 275 L220 275 L190 315 L240 315 L180 355 L210 321 L160 321 Z" fill="white" filter="url(#glow)"/>
  
  <!-- Main Text -->
  <text x="320" y="280" font-family="Arial, sans-serif" font-size="64" font-weight="bold" fill="white">
    ZetaForge AI
  </text>
  
  <!-- Subtitle -->
  <text x="320" y="330" font-family="Arial, sans-serif" font-size="32" fill="#8b5cf6">
    AI-Powered NFT Generator
  </text>
  
  <!-- Description -->
  <text x="320" y="380" font-family="Arial, sans-serif" font-size="24" fill="rgba(255,255,255,0.8)">
    Create stunning digital assets with Gemini 2.0 Flash
  </text>
  <text x="320" y="410" font-family="Arial, sans-serif" font-size="24" fill="rgba(255,255,255,0.8)">
    and mint them as NFTs on ZetaChain blockchain
  </text>
  
  <!-- Decorative Elements -->
  <circle cx="950" cy="150" r="40" fill="rgba(99, 102, 241, 0.2)" filter="url(#glow)"/>
  <circle cx="1050" cy="200" r="25" fill="rgba(139, 92, 246, 0.3)" filter="url(#glow)"/>
  <circle cx="900" cy="250" r="30" fill="rgba(168, 85, 247, 0.25)" filter="url(#glow)"/>
  
  <circle cx="1000" cy="450" r="35" fill="rgba(6, 182, 212, 0.2)" filter="url(#glow)"/>
  <circle cx="1100" cy="500" r="20" fill="rgba(59, 130, 246, 0.3)" filter="url(#glow)"/>
  
  <!-- Tech Lines -->
  <g stroke="rgba(99, 102, 241, 0.3)" stroke-width="2" fill="none">
    <path d="M850 100 L950 100 L950 130"/>
    <path d="M1050 420 L1150 420 L1150 450"/>
    <circle cx="865" cy="100" r="3" fill="rgba(99, 102, 241, 0.6)"/>
    <circle cx="1135" cy="450" r="3" fill="rgba(99, 102, 241, 0.6)"/>
  </g>
</svg>
